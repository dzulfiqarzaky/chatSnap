<%- include('../helper/header') -%>

<%- include ('../helper/navbar') %> 

<div class="container mt-5">

  <form action="/admin" method="get">
    <a href="/admin" class="btn btn-primary">all users</a>
    <button type="submit" class="btn btn-primary" name="filter" value="Post">All Post</button>
    <button type="submit" class="btn btn-primary" name="filter" value="Tag">All tags</button>
  </form>

  <div>
  <H1 class="mt-5">Welcome <%= admin.username %> </H1>
  <a style="float: right;" href="/logOut" class="btn btn-outline-danger mt-5">logout</a>
  <h6 style="color: coral;" > <%= randomQuotes() %> </h6>   
</div>
  <% if (filters.length > 0) { %>
    <% if (filters[0].title) { %>
      <table class="table mt-5">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% filters.forEach((post, i) =>{%>
                <tr>
                  <th scope="row"><%= i + 1 %></th>
                  <td><%= post.title %></td>
                    <td><%= post.description %></td>
                    <td>
                        <a href="" style="width: 8rem;" class="btn btn-outline-primary" type="button">User Post</a>
                        <a href="/admin/delete/post/<%= post.id %>" style="width: 8rem;" class="btn btn-danger" type="button">Delete</a>  
                    </td>
                </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else {%>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% filters.forEach(tag =>{%>

              <tr>
                <th scope="row"><%= tag.name %></th>
                  <td>
                      <a href="" style="width: 8rem;" class="btn btn-outline-primary" type="button">User Post</a>
                      <a href="/admin/delete/tag/<%= tag.id %>" style="width: 8rem;" class="btn btn-danger" type="button">Delete</a>  
                  </td>
              </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  <% } else {%>
  <% if(sum){ %>
    <h3 class="mt-3"><%= sum %></h3>
  <% } %>
  <table class="table mt-5">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">UserName</th>
            <th scope="col">Email</th>
            <th scope="col">Age</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((profile, i) =>{%>
                <tr>
                  <th scope="row"><%= i+1 %></th>
                  <td><%= profile.username %></td>
                    <td><%= profile.email %></td>
                    <td><%= profile.User.age %></td>
                    <td>
                        <a href="" style="width: 8rem;" class="btn btn-outline-primary" type="button">User details</a>
                        <a href="/admin/delete/user/<%= profile.id %>" style="width: 8rem;" class="btn btn-danger" type="button">Delete</a>  
                    </td>
                </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>

</div>

<%- include('../helper/footer') -%>